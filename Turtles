import turtle
spark = turtle.Turtle()

def draw_shape(color, name):
  if name == 'square':
    for side in range(4):
      spark.color(color)
      spark.forward(100)
      spark.right(90)
  if name == 'tirangle':
    for side in range(3):
      spark.color(color)
      spark.forward(100)
      spark.right(360/3)
  if name == 'sircle':
    for side in range(360):
      spark.color(color)
      spark.forward(1)
      spark.right(1)
      
draw_shape('aqua', square)
    
